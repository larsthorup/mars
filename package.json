{
    "name": "mars",
    "version": "0.1.0",
    "description": "NodeJS, Restify, ws, Knex, Mocha",
    "repository": {
        "type": "git",
        "url": "https://github.com/larsthorup/mars.git"
    },
    "dependencies": {
        "bluebird": "^2.3.1",
        "bunyan": "^1.0.1",
        "forever": "^0.14.1",
        "knex": "^0.7.3",
        "lodash": "^3.0.0",
        "meow": "^3.0.0",
        "mkdirp": "^0.5.0",
        "password-hash": "^1.2.1",
        "require-all": "^1.0.0",
        "restify": "^2.8.2",
        "semver": "^4.0.0",
        "sqlite3": "^3.0.0",
        "ws": "^0.7.0"
    },
    "devDependencies": {
        "chai": "^2.1.0",
        "chai-as-promised": "^4.1.1",
        "coveralls": "^2.11.1",
        "gulp": "^3.8.7",
        "gulp-changed": "^1.0.0",
        "gulp-debug": "^2.0.0",
        "gulp-mocha": "^2.0.0",
        "gulp-mocha-phantomjs": "^0.5.1",
        "gulp-open": "^0.3.1",
        "gulp-shell": "^0.3.0",
        "gulp-webserver": "^0.9.0",
        "istanbul": "^0.3.0",
        "jshint": "^2.6.3",
        "jshint-stylish": "^1.0.0",
        "mocha": "^2.0.1",
        "opener": "^1.4.0",
        "request-promise": "^0.4.0",
        "sinon": "^1.10.3",
        "sinon-chai": "^2.5.0"
    },
    "author": {
        "name": "Lars Thorup",
        "web": "https://github.com/larsthorup"
    },
    "scripts": {
        "-- fast feedback ": "--",
        "lint": "jshint --verbose --reporter=node_modules/jshint-stylish/stylish.js src test demo",
        "unittest": "mocha -R spec --require test/unit/setup --recursive test/unit",
        "cover": "istanbul cover node_modules/mocha/bin/_mocha -- -R dot --require test/unit/setup --recursive test/unit",
        "cover-report": "opener dist/coverage/lcov-report/index.html",
        "end2end": "gulp end2end",
        "demotest": "gulp demotest",
        "test": "npm run lint && npm run cover && gulp end2end && gulp demotest",
        "package": "npm shrinkwrap && rm -rf dist && mkdir dist && cp --recursive --target-directory=dist src demo package.json npm-shrinkwrap.json && rm -rf npm-shrinkwrap.json",
        "dev": "npm install && npm run lint && npm run cover && npm run end2end",
        "-- run locally ": "--",
        "demo": "gulp demo",
        "start": "gulp run",
        "start-local": "gulp run",
        "-- run on virtual machine ": "--",
        "up": "vagrant up",
        "uninstall-remote": "vagrant ssh -c 'rm -rf ~/node_modules/mars' -- -n -T",
        "install-remote": "vagrant ssh -c 'npm install /vagrant/dist --production' -- -n -T",
        "start-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever start -a -l /vagrant/logs/forever.log -o /vagrant/logs/mars.out.log -e /vagrant/logs/mars.err.log ~/node_modules/mars/src/cli.js' -- -n -T",
        "list-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever list' -- -n -T",
        "stop-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever stop ~/node_modules/mars/src/cli.js' -- -n -T",
        "test-remote": "sleep 2 && curl --insecure https://192.168.50.4:1719/hello/Lars",
        "deploy": "npm run package && npm run up && npm run install-remote && npm run start-remote && npm run test-remote",
        "-- continuous integration ": "--",
        "coveralls": "cat ./dist/coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "travis": "npm run lint && npm run cover && npm run coveralls && npm run end2end && npm run demotest && npm run package"
    },
    "license": "MIT",
    "readmeFilename": "README.md"
}
