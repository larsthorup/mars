{
    "name": "mars",
    "version": "0.0.1",
    "description": "NodeJS, Mocha, Bookshelf, Restify",
    "repository": {
        "type": "git",
        "url": "https://github.com/larsthorup/mars.git"
    },
    "dependencies": {
        "sqlite3": "~2.2.0",
        "knex": "~0.5.5",
        "restify": "~2.6.1",
        "forever": "~0.10.11",
        "password-hash": "~1.2.1",
        "bluebird": "~1.0.8"
    },
    "devDependencies": {
        "jshint": "~2.4.3",
        "mocha": "~1.21.0",
        "chai": "~1.9.0",
        "chai-as-promised": "~4.1.1",
        "sinon": "~1.8.1",
        "sinon-chai": "~2.5.0",
        "istanbul": "~0.2.4",
        "coveralls": "~2.8.0"
    },
    "author": {
        "name": "Lars Thorup",
        "web": "https://github.com/larsthorup"
    },
    "scripts": {
        "-- fast feedback ": "--",
        "lint": "node node_modules/jshint/bin/jshint src test",
        "test": "node node_modules/mocha/bin/mocha -R dot --require test/setup --recursive",
        "cover": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R dot --require test/setup --recursive",
        "cover-report": "start coverage/lcov-report/index.html",
        "package": "npm shrinkwrap && rm -rf dist && mkdir dist && cp --recursive --target-directory=dist src conf static package.json npm-shrinkwrap.json && rm -rf npm-shrinkwrap.json",
        "dev": "npm install && npm run lint && npm run cover",
        "-- run locally ": "--",
        "start": "node src/mars.js",
        "start-local": "node src/mars.js",
        "test-local": "curl --insecure https://localhost:1719/hello/Lars",
        "-- run on virtual machine ": "--",
        "up": "vagrant up",
        "uninstall-remote": "vagrant ssh -c 'rm -rf ~/node_modules/mars' -- -n -T",
        "install-remote": "vagrant ssh -c 'npm install /vagrant/dist --production' -- -n -T",
        "start-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever start -a -l /vagrant/logs/forever.log -o /vagrant/logs/mars.out.log -e /vagrant/logs/mars.err.log ~/node_modules/mars/src/mars.js' -- -n -T",
        "list-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever list' -- -n -T",
        "stop-remote": "vagrant ssh -c 'node ~/node_modules/mars/node_modules/forever/bin/forever stop ~/node_modules/mars/src/mars.js' -- -n -T",
        "test-remote": "sleep 2 && curl --insecure https://192.168.50.4:1719/hello/Lars",
        "deploy": "npm run package && npm run up && npm run install-remote && npm run start-remote && npm run test-remote",
        "-- continuous integration ": "--",
        "travis": "npm run lint && npm run coveralls && npm run package",
        "coveralls": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha --report lcovonly -- -R dot --require test/setup --recursive && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
    },
    "license": "MIT",
    "readmeFilename": "README.md"
}
